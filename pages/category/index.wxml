<!-- pages/category/index.wxml -->
<view class="cates">
    <SearchInput></SearchInput>
    <view class="cates_container">
        <!-- 左侧 -->
        <scroll-view scroll-y="{{true}}" class="left_menu">
            <!-- leftMenuList 是个简单数组 
        
        key 就可以这样指定 *this -->
            <view 
        class="menu_item {{index===currentIndex?'active':''}}"
            wx:for="{{leftMenuList}}" 
            wx:key="*this" >{{item}}</view>
        </scroll-view>
        <!-- 右侧 -->
        <scroll-view scroll-y="{{true}}" class="right_content">
            <view class="goods_group" wx:for="{{rightContent}}" wx:for-index="index1" wx:for-item="item1">
                <view class="goods_title">
              
                    <text class="delimiter">/</text>
                   <!-- 在此处换行的话，也会输入到代码中去的 注意呀-->
                   <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>
                    
                    </view>
               
               
               <view class="goods_list">
                    <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id" >
                        <image mode="widthFix" src="{{item2.cat_icon}}"></image>
                        <view class="goods_name">{{item2.cat_name}} Wos </view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>